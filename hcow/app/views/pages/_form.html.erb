<%= form_with(model: page) do |form| %>
  <% if page.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div data-controller="page">
    <div>
      <%= form.label :page_type, style: "display: block" %>
      <%= form.select :page_type,
        ["Basic Page", "External URL", "Internal URL", "PDF"],
        {},
        data: {
          action: "change->page#changer",
          "page-target": "pagetype"
        }
      %>
    </div>

    

      <div id="title">
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title %>
      </div>

      <div id="section">
        <%= form.label :section_id, style: "display: block" %>
        <%= form.number_field :section_id %>
      </div>

      <div id="position">
        <%= form.label :position, style: "display: block" %>
        <%= form.number_field :position %>
      </div>

      <div data-page-target="page" id="destination" class="visually-hidden">
        <%= form.label :destination, style: "display: block" %>
        <%= form.text_field :destination %>
      </div>

      <div id="visible">
        <%= form.label :visible, style: "display: block" %>
        <%= form.check_box :visible %>
      </div>

      <div data-page-target="page" id="content">
        <%= form.label :content, style: "display: block" %>
        <%= form.text_area :content %>
      </div>


    <div>
      <%= form.submit %>
    </div>

    
  </div>
<% end %>
